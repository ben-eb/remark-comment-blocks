{
  "name": "remark-comment-blocks",
  "version": "0.0.0",
  "description": "Wrap Markdown with a comment block.",
  "main": "dist/index.js",
  "files": [
    "LICENSE-MIT",
    "dist"
  ],
  "scripts": {
    "copy-fixtures": "ncp src/__tests__/fixtures dist/__tests__/fixtures",
    "lint": "eslint src",
    "prepublish": "de dist && babel src --out-dir dist --ignore /__tests__/",
    "test": "npm run lint && babel src --out-dir dist && npm run copy-fixtures && nyc --reporter=lcov --reporter=text ava dist/__tests__"
  },
  "devDependencies": {
    "ava": "^0.9.1",
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-preset-es2015-loose": "^6.1.4",
    "babel-preset-stage-0": "^6.3.13",
    "coveralls": "^2.11.6",
    "del-cli": "^0.1.2",
    "eslint": "^1.10.3",
    "ncp": "^2.0.0",
    "nyc": "^5.3.0",
    "remark": "^3.1.3"
  },
  "dependencies": {
    "object-assign": "^4.0.1",
    "trim-right": "^1.0.1"
  },
  "keywords": [
    "code",
    "comments",
    "remark",
    "markdown"
  ],
  "license": "MIT",
  "homepage": "https://github.com/ben-eb/remark-comment-blocks",
  "author": {
    "name": "Ben Briggs",
    "email": "beneb.info@gmail.com",
    "url": "http://beneb.info"
  },
  "repository": "ben-eb/remark-comment-blocks"
}
